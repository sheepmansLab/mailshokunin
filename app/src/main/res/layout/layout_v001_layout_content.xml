<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <TextView
        android:id="@+id/V001_tv_title"
        android:layout_width="match_parent"
        android:layout_height="20sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/V001_btn_delete"
        android:background="@color/colorPrimary"
        android:textSize="12sp"/>
    <EditText
        android:id="@+id/V001_tv_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/V001_tv_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:gravity="top|start"
        android:singleLine="false"
        android:minLines="2"
        />
    <Button
        android:id="@+id/V001_btn_delete"
        android:layout_width="15sp"
        android:layout_height="15sp"
        android:layout_margin="2dp"
        android:background="@drawable/drawable_button_circle_del"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"/>
    <Button
        android:id="@+id/V001_btn_edit"
        android:layout_width="15sp"
        android:layout_height="15sp"
        android:layout_margin="2dp"
        android:background="@drawable/drawable_button_circle_edit"
        android:layout_toStartOf="@+id/V001_btn_delete"
        android:layout_alignParentTop="true"/>

</RelativeLayout>