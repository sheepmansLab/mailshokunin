<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <TextView
        android:id="@+id/V001_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/V001_btn_delete"
        android:background="@color/colorPrimary"
        android:textSize="20sp"/>
    <EditText
        android:id="@+id/V001_tv_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/V001_tv_title"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/V001_btn_edit"
        android:singleLine="false"
        android:minLines="3"
        />
    <Button
        android:id="@+id/V001_btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"/>
    <Button
        android:id="@+id/V001_btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/V001_btn_delete"/>

</merge>